{
  "name": "parrot",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run dev:api & bun run dev:desktop",
    "dev:api": "bun run --filter @parrot/api dev",
    "dev:desktop": "bun run --filter @parrot/desktop tauri dev",
    "build:desktop": "bun run --filter @parrot/desktop tauri build",
    "db:generate": "bun run --filter @parrot/api db:generate",
    "db:migrate": "bun run --filter @parrot/api db:migrate"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "@tauri-apps/cli": "^2"
  }
}
